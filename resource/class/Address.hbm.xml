<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ideas2it.employee.model.Address"
		table="Address">
		<id name="addressId" column="address_id" type="int">
			<generator class="increment"></generator>
		</id>
		<property name="streetName" column="street_name" type="string"></property>
		<property name="areaName" column="area_name" type="string"></property>
		<property name="cityName" column="city_name" type="string"></property>
		<property name="pinCode" column="pincode" type="string"></property>
<!-- 	 <many-to-one class ="com.ideas2it.employee.model.Employee" name="employee" column="employee_id" cascade="all" lazy="proxy"/>    
 -->    
	</class>
</hibernate-mapping>